<div class="label">
	<span>Entrada</span>
</div>

<div class="form-new">
	<%= form_tag entry_product_path(@product), method: :get do %>

		<div class="form-group">
			<%= label_tag :produto %>
			<%= text_field_tag :product, @product.name, :disabled=>true, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= label_tag :em_estoque %>
			<%= text_field_tag :amount, @product.amount, :disabled=>true, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= label_tag :entrada %><br>
			<%= number_field_tag :entry, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= button_to :salvar, nil, class: 'btn btn-success' %>
		</div>

	<% end %>
</div>