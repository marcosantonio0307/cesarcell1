<div class="options">
	<span><input type='button' value='Voltar' onclick='history.go(-1)' class="btn btn-default" /></span>
	<span><%= link_to 'Editar', edit_product_path(@product), class: 'btn btn-warning' %></span>
	<span><%= link_to 'Excluir', product_path(@product), method: :delete, class: 'btn btn-danger', data:{confirm: "Deja Excluir o Produto: #{@product.name}"} %></span>
</div>


<%= form_for @product do |f| %>

	<div class="form-new">
		<div class="form-group">
			<%= f.label :sku %>
			<%= f.text_field :sku, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :nome %>
			<%= f.text_field :name, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :quantidade %>
			<%= f.text_field :amount, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :custo %>
			<%= f.text_field :cost, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :preco %>
			<%= f.text_field :price, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :tipo %>
			<%= f.text_field :category, class: 'form-control', :disabled=>true %>
		</div>

	</div>
<% end %>