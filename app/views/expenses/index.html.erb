<div class="label">
	<span><%= @title %></span>
</div>

<table class="table table-bordered">
	<thead>
		<th>Data</th>
		<th>Tipo</th>
		<th>Descrição</th>
		<th>Valor</th>
		<th>Usuario</th>
	</thead>

	<tbody>
		<% @total = 0 %>
		<% @expenses.each do |expense| %>
		<tr>
			<td><%= expense.created_at.strftime("%d/%m/%Y") %></td>
			<td><%= expense.category %></td>
			<td><%= expense.description %></td>
			<td><%= number_to_currency expense.total %></td>
			<td><%= expense.user.email %></td>
			<% if @report != true %>
				<td><%= link_to 'Exibir', expense_path(expense), class: 'btn btn-primary' %></td>
			<% end %>
			<% @total += expense.total %>
		</tr>
		<% end %>
	</tbody>
</table>

<div class="navbar navbar-right">
	<%= label_tag :total %>
	<%= text_field_tag :total, number_to_currency(@total) %>
</div>
