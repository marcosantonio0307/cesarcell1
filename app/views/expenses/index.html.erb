<div class="label">
	<span><%= @title %></span>
</div>

<%= form_tag expenses_filter_date_path, method: :get do %>
	<div class="nav-right">
		<span style="visibility: hidden;"><%= text_field_tag :category, @category %></span>
		<%= date_field_tag :begin_date, class: 'form-control' %>
		<%= date_field_tag :end_date, class: 'form-control' %>
		<%= button_to 'Filtrar', nil, class: 'btn btn-success' %>
	</div>	
<% end %>

<%= render 'expenses' %>