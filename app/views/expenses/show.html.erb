<div class="options">
	<%= link_to 'Voltar', expenses_path, class: 'btn btn-default' %>
	<%= link_to 'Editar', edit_expense_path(@expense), class: 'btn btn-warning' %>
	<%= link_to 'Excluir', expense_path(@expense), method: :delete, class: 'btn btn-danger' %>
</div>

<div class="form-new">
	<%= form_for @expense do |f| %>

		<div class="form-group">
			<%= label_tag :data %>
			<%= text_field_tag :created_at, @expense.created_at.strftime("%d/%m/%Y"), class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :descricao %>
			<%= f.text_field :description, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :valor %>
			<%= f.text_field :total, class: 'form-control', :disabled=>true %>
		</div>

		<div class="form-group">
			<%= f.label :tipo %>
			<%= f.text_field :category, class: 'form-control', :disabled=>true %>	
		</div>
	<% end %>
</div>