<div class="label">
	<span>Usu√°rios Cadastrados</span>
</div>

<table class="table table-bordered">
	<thead>
		<th>Criado Em</th>
		<th>Login</th>
		<th>Nome</th>
		<th>Tipo</th>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.created_at.strftime("%d/%m/%Y") %></td>
				<td><%= user.email %></td>
				<td>
					<% if user.name != nil %>
						<%= user.name %>
					<% end %>
				</td>
				<td>
					<% if user.category != nil %>
						<%= user.category %>
					<% end %>
				</td>
				<td><%= link_to 'Alterar Senha', edit_user_path(user), class: 'btn btn-warning' %></td>
				<td><%= link_to 'Editar Usuario', category_user_path(user), class: 'btn btn-primary' %></td>
			</tr>
		<% end %>
	</tbody>
</table>