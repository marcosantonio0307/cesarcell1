<div class="login_area">
	<div class="form_login">
		<%= form_for @user do |f| %>
			<div class="field">
	          <%= f.label :usuario %><br>
	          <%= f.email_field :email, :disabled=>true, class: '' %>
	        </div><br>
	        <div class="field">
	          <%= f.label :nome %><br>
	          <%= text_field_tag :name %>
	        </div><br>
	        <div class="field">
	          <%= f.label :tipo %><br>
	          <%= select_tag :category, options_for_select(['admin', 'vendedor', 'caixa']) %>
	        </div><br>

	        <div>
	        	<%= f.submit :salvar, class: 'btn btn-success' %>
	        </div>
		<% end %>
	</div>
</div>