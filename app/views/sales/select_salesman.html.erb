<div class="label">
	<span>Relatório de Vendas por Vendedor</span>
</div>

<div class="form-new">
	<%= form_tag sales_salesman_path, method: :get do %>
	<% @users = User.all %>
	<div class="form-group">
		<%= label_tag :Vendedor %><br>
		<%= select_tag :salesman, options_from_collection_for_select(@users, "id", "email") %><br>
	</div>
	<div class="form-group">
		<%= label_tag 'Data Inicial' %><br>
		<%= date_field_tag :begin_date, @begin_date %>
	</div>
	<div class="form-group">
		<%= label_tag 'Data Final' %><br>
		<%= date_field_tag :end_date, @end_date %>
	</div>
	<div class="form-group">
		<%= button_to 'Gerar Relatório', nil, class: 'btn btn-success' %>
	</div>
	<% end %>
</div>