<div class="label">
	<span>Produtos Encontrados</span>
</div>

<%= form_tag search_item_sale_path(@sale), method: :get, class: 'navbar-form navbar-right' do %>
	<div>
		<input type='button' value='Voltar' onclick='history.go(-1)' class="btn btn-default" />
		<%= text_field_tag :name, @name, class: 'form-control' %>
		<%= button_to 'Buscar', nil, class: 'btn btn-success' %>
	</div>
<% end %> 

<div>
	<table class="table table-bordered">
		<thead>
			<th>SKU</th>
			<th>Nome</th>
			<th>Quantidade</th>
			<th>Pre√ßo</th>
			<th>Tipo</th>
		</thead>
		<% @products.each do |product| %>
		<tbody>
			<tr>
				<td><%= product.sku %></td>
				<td><%= product.name %></td>
				<td><%= product.amount %></td>
				<td><%= number_to_currency product.price %></td>
				<td><%= product.category %></td>
				<td><%= button_to 'Selecionar', new_select_sale_item_path(@sale, product), method: :get, class: 'btn btn-primary' %></td>
			</tr>
		</tbody>
		<% end %>
	</table>
</div>