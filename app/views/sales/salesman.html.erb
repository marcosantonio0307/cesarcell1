<div class="label">
	<span>Selecione o Período</span>
</div>

<div class="form-new">

	<%= form_tag sales_report_salesman_path, method: :get do %>

	<div class="form-group">
		<%= label_tag 'Data Inicial' %>
		<%= date_field_tag :begin_date, @begin_date, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= label_tag 'Data Final' %>
		<%= date_field_tag :end_date, @end_date, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= button_to 'Gerar Relatório', nil, class: 'btn btn-success' %>
	</div>
	
	<% end %>
</div>